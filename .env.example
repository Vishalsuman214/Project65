# ============================================
# Environment Variables for Reminder App
# ============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control - it contains sensitive information

# ============================================
# FLASK APPLICATION SETTINGS
# ============================================
# Secret key for Flask sessions and security
# Generate a random secret key: python -c "import secrets; print(secrets.token_hex(32))"
SECRET_KEY=your_random_secret_key_here

# ============================================
# DATABASE SETTINGS
# ============================================
# MongoDB connection string
# For local MongoDB: mongodb://localhost:27017/reminderapp
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/reminderapp
MONGODB_URI=mongodb://localhost:27017/reminderapp

# ============================================
# EMAIL SERVICE SETTINGS
# ============================================
# SendGrid API Key (RECOMMENDED for reliable email delivery)
# Get this from https://app.sendgrid.com/settings/api_keys
# Free tier: 100 emails/day
# This is used for system emails (password reset, verification) when users haven't set their own credentials
SENDGRID_API_KEY=your_sendgrid_api_key_here

# ============================================
# SYSTEM EMAIL FALLBACK SETTINGS
# ============================================
# These are used ONLY for system emails (password reset, email verification)
# when SendGrid is not configured and users haven't set their personal email credentials
# Users set their own email credentials in the app's email_credentials page for sending reminders

# Gmail SMTP settings for system emails (fallback only)
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=True
MAIL_USE_SSL=False

# System Gmail address for automated emails (password reset, verification)
# This is NOT used for user reminder emails - users configure their own in the app
MAIL_USERNAME=sumanvishal598@gmail.com

# Gmail App Password for system email account
